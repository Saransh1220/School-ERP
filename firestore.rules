rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    // Check if user has 'admin' role in their user profile
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if user has 'teacher' role
    function isTeacher() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    // Check if user is a parent linked to the specific student
    function isParentOf(studentId) {
      return request.auth != null && 
             request.auth.uid in get(/databases/$(database)/documents/students/$(studentId)).data.parentIds;
    }
    
    // Check if user is accessing their own profile
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Collections ---

    // Users: Users can read/write their own profile. Admins can manage all.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Classes: Public read (authenticated), Admin write
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Sections: Public read (authenticated), Admin write
    match /sections/{sectionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Students: 
    // - Admin: Full access
    // - Teacher: Read access (refined later to assigned sections)
    // - Parent: Read access ONLY if linked
    match /students/{studentId} {
      allow read: if isAdmin() || isTeacher() || isParentOf(studentId);
      allow write: if isAdmin(); // Only Admin adds students
      
      // Sub-collections
      match /attendance/{date} {
         allow read: if isAdmin() || isTeacher() || isParentOf(studentId);
         allow write: if isAdmin() || isTeacher();
      }
      
      match /daily_care/{date} {
         allow read: if isAdmin() || isTeacher() || isParentOf(studentId);
         allow write: if isAdmin() || isTeacher();
      }
      
      match /activities/{activityId} {
         allow read: if isAdmin() || isTeacher() || isParentOf(studentId);
         allow write: if isAdmin() || isTeacher();
      }
    }
  }
}
